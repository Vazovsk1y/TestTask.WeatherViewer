@page
@model ErrorModel
@{
ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 text-danger">Something went wrong</h1>
        <p class="lead text-secondary">We're sorry, but an error occurred while processing your request.</p>
    </div>

    @if (Model.ShowRequestId)
    {
    <div class="text-center mt-3">
        <p>
            <strong>Request Id:</strong> <code>@Model.RequestId</code>
        </p>
    </div>
    }

    <div class="text-center mt-4">
        <a href="/" class="btn btn-primary">Go to Homepage</a>
    </div>

    <div class="alert alert-info mt-4" role="alert">
        <h4 class="alert-heading">Need Help?</h4>
        <p>If the issue persists, please contact our support team and provide the Request Id above.</p>
    </div>
</div>
